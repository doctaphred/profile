#!/usr/bin/env bash -euo pipefail
IFS=$'\n\t'

# Select and copy an emojus (or other character) with fzf! ðŸ˜„

_emojus list | 
fzf \
    --preview='_emojus preview {}' \
    --tiebreak=index \
    --exact \
    --multi \
    --query="$*" \
    --select-1 \
    | 
_emojus parse | 
pbcopy &&
pbpaste
