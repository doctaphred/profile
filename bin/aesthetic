#!/usr/bin/env python3
import sys


def backtick(word):
    """
    >>> backtick('aesthetic')
    '`a` `e` `s` `t` `h` `e` `t` `i` `c`'
    """
    return ' '.join(f'`{letter}`' for letter in word)


def aesthetic(words, *, sep=' ' * 3):
    """
    >>> aesthetic(['ayy', 'lmao'])
    '`a` `y` `y`   `l` `m` `a` `o`'
    """
    return sep.join(backtick(word) for word in words)


_, *words = sys.argv
if not words:
    words = ''.join(input()).split()

print(aesthetic(words), end='')
